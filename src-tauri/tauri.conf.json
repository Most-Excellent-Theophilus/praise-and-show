{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tamando",
  "version": "0.1.0",
  "identifier": "com.mkama.tamando",

  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Praise And Show",
        "decorations": false,
        "resizable": true,
        "width": 1100,
        "height": 700,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "visible": true
      }
    ],

    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
